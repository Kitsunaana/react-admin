{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": false, // Проверка типов в библиотеках
    "strict": true, // Включает все строгие проверки
    "strictNullChecks": true, // Проверка на null и undefined
    "noImplicitAny": true, // Запрет неявного типа any
    "strictBindCallApply": true, // Проверка типов для методов bind, call и apply
    "noFallthroughCasesInSwitch": true, // Запрет на падение в switch
    "noUncheckedIndexedAccess": true, // Проверка на доступ к индексам
    "exactOptionalPropertyTypes": true // Точные типы для необязательных свойств
  }
}
