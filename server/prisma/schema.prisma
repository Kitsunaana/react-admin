generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int         @id @default(autoincrement())
  createdAt DateTime    @default(now())
  email     String      @unique
  password  String
  roles     UserRoles[]
}

model Role {
  id          Int         @id @default(autoincrement())
  value       String
  description String
  users       UserRoles[]
}

model UserRoles {
  user   User @relation(fields: [userId], references: [id])
  userId Int
  Role   Role @relation(fields: [roleId], references: [id])
  roleId Int

  @@id([userId, roleId])
}

model Category {
  id          Int     @id @default(autoincrement())
  caption     String
  description String?
}
